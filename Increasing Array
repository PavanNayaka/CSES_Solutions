import java.util.*;
class Main5{
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        long[] a=new long[n];
 
        for(int i=0;i<=a.length-1;i++){
            a[i]=sc.nextInt();
        }
        long sum=0;
        for(int i=1;i<=a.length-1;i++){
            if(a[i]<a[i-1]){
                sum=sum+(a[i-1]-a[i]);
                a[i]=a[i-1];
            }
        }
        System.out.println(sum);
        
    }
}
