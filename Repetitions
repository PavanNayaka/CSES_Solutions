import java.util.*;
class Main3 {
    public static void main(String[] args) {
    Scanner sc=new Scanner(System.in);
    char[] s=sc.next().toCharArray();
    int len=1;
    int max=1;
    for(int i=1;i<=s.length-1;i++){
        if(s[i]==s[i-1]){
            len++;
        }
        else{
            max=Math.max(len,max);
            len=1;
        }
    }
     max=Math.max(len,max);
    System.out.print(max);
 
}
}
